<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.javierbriones.androidcalc">

    <application
        android:name="org.javierbriones.androidcalc.AndroidCalcApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.javierbriones.androidcalc.SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.javierbriones.androidcalc.MainActivity"></activity>
        <activity android:name="org.javierbriones.androidcalc.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.javierbriones.androidcalc.MainActivity" />
        </activity>
    </application>

</manifest>